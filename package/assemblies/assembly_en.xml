<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>

        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*-jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>file</outputDirectory>
            <includes>
                <include>readme_en.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>images</directory>
            <outputDirectory>file</outputDirectory>
            <includes>
                <include>subPipeline.png</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/i18n</directory>
            <outputDirectory>/i18n</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <!--源文件地址，相对于项目地址-->
            <source>task_en.json</source>
            <!--输出目录为projectName-assembly-version/-->
            <outputDirectory>.</outputDirectory>
            <!--重命名为-->
            <destName>task.json</destName>
        </file>
    </files>

</assembly>
